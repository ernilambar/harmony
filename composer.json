{
  "name": "ernilambar/harmony",
  "description": "Sample plugin that implements WP PHPUnit testing.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Nilambar Sharma",
      "email": "nilambar@outlook.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Harmony\\": "src"
    }
  },
  "require": {
    "php": "^5.6 || ^7.0 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5 || ^6 || ^7",
    "roots/wordpress": "^5.0",
    "wp-phpunit/wp-phpunit": "^5.0",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "allow-plugins": {
      "roots/wordpress-core-installer": true
    }
  }
}
